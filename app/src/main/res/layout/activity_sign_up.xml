<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 🌄 Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/signupbg"
        android:contentDescription="Background Image" />

    <!-- 🔳 Overlay for better readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF" />

    <!-- 📜 Scrollable Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- 🚀 App Logo -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/atmlogo"
                android:layout_marginBottom="16dp"
                android:contentDescription="App Logo" />

            <!-- 📋 Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Your Account"
                android:textColor="#1E3A8A"
                android:textSize="24sp"
                android:fontFamily="@font/fredoka_light"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- ✏️ Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/alata"
                android:text="Enter Full Name:"
                android:textColor="#122C62"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/editTextBackground"
                android:hint="Full Name"
                android:fontFamily="@font/alata"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <!-- 👤 Username -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/alata"
                android:text="Create Your Username:"
                android:textColor="#122C62"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextUsernameSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/editTextBackground"
                android:hint="Username"
                android:fontFamily="@font/alata"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- 📧 Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/alata"
                android:text="Enter Your Email:"
                android:textColor="#122C62"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEmailSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/editTextBackground"
                android:hint="Email"
                android:fontFamily="@font/alata"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="16dp" />

            <!-- ☎️ Phone Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/alata"
                android:text="Enter Phone Number:"
                android:textColor="#122C62"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/editTextBackground"
                android:hint="Phone Number"
                android:fontFamily="@font/alata"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="phone"
                android:layout_marginBottom="16dp" />

            <!-- 🔒 Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/alata"
                android:text="Create Your Password (at least six characters):"
                android:textColor="#122C62"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPasswordSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/editTextBackground"
                android:hint="Password (min 6 characters)"
                android:fontFamily="@font/alata"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp" />

            <!-- 🔒 Confirm Password -->
            <EditText
                android:id="@+id/editTextConfirmPasswordSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/editTextBackground"
                android:hint="Confirm Password"
                android:fontFamily="@font/alata"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp" />

            <!-- 🟦 Sign Up Button -->
            <Button
                android:id="@+id/buttonSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/alata"
                android:backgroundTint="#1E3A8A"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- 🔄 Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBarSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>