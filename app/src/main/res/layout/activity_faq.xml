<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_bg"
        android:contentDescription="Background Image" />

    <!--  Semi-transparent overlay  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF" /> <!-- 70% white -->

    <!-- Scrollable FAQ content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- App Title -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/alata"
                android:text="ATM-Finder"
                android:textColor="#1E3A8A"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <!-- App Logo -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/atmlogo"
                android:contentDescription="App Logo"
                android:layout_marginBottom="16dp" />

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="(FAQ) Frequently Asked Questions❓"
                android:textColor="#1E3A8A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- FAQ Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/rounded_box"
                android:layout_marginBottom="24dp">

                <!-- Question 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="1. What is ATM-Finder?"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ATM-Finder is a mobile app designed to help users locate the nearest ATM machines based on their location in real time."
                    android:textStyle="italic" />

                <!-- Question 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="2. How to use the application?"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Open the app, sign in or register, and the app will show ATMs around you based on your location. You can also search manually or view your profile."
                    android:textStyle="italic" />

                <!-- Question 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="3. Who is ATM-Finder for?"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="This app is for anyone in Malaysia looking for convenient ATM locations, whether locals or visitors."
                    android:textStyle="italic" />

                <!-- Question 4 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="4. Which devices can I use?"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ATM-Finder works on most Android devices running version 5.0 (Lollipop) or higher."
                    android:textStyle="italic" />

                <!-- Question 5 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="5. Does ATM-Finder have navigation features?"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="✅ Yes! ATM-Finder integrates with map services to provide step-by-step navigation from your current location to the nearest ATM. It helps guide you efficiently and safely, even in unfamiliar areas."
                    android:textStyle="italic" />

                <!-- Question 6 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="6. Where is ATM-Finder based?"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ATM-Finder is developed and based in Malaysia as part of a Mobile Technology and Development project by a student group from UiTM."
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>