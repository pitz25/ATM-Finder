<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/profilebg"
        android:contentDescription="Background Image" />

    <!-- ðŸ”¹ Semi-transparent overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF" /> <!-- 70% white overlay -->

    <!-- ðŸ”¹ Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- App Title -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/amaranth"
                android:text="ATM-Finder"
                android:textColor="#1E3A8A"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <!-- App Logo -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="110dp"
                android:layout_height="104dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:contentDescription="App Logo"
                android:src="@drawable/atmlogo" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- ðŸ”„ Refresh Button -->
            <Button
                android:id="@+id/buttonRefreshProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”„"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#1E3A8A"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Single Rounded Box for All User Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_box"
                android:elevation="2dp">

                <!-- Full Name -->
                <TextView
                    android:id="@+id/textFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Full Name"
                    android:textColor="#1E3A8A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Bio -->
                <TextView
                    android:id="@+id/textBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Your bio goes here..."
                    android:textColor="#1E40AF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Phone Number"
                    android:textColor="#1E3A8A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Username -->
                <TextView
                    android:id="@+id/textUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Username"
                    android:textColor="#1E3A8A"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/buttonEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit My Profile"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
